{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "minLength": 3
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 1000,
      "minLength": 1
    },
    "slug": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 100,
      "unique": true
    },
    "books": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::book.book",
      "mappedBy": "categories"
    }
  }
}
